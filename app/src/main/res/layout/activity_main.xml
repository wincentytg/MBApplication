<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ytg.jzy.MainActivity"
    android:orientation="vertical">
   <!-- <com.yuntongxun.plugin.common.common.button.ButtonFlat
        android:id="@+id/dilaog_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textSize="@dimen/SmallTextSize"
        android:background="@color/red"
        />-->
    <ImageView
        android:id="@+id/mIvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<com.ytg.jzy.p_common.view.SwitchButton
    android:id="@+id/mSwitchBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
        android:id="@+id/mTvActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ytg.jzy.p_common.view.ProgressBarDeterminate
        android:id="@+id/progressDeterminate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:layout_marginLeft="@dimen/SmallPadding"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/NormalPadding"/>
    <TextView
        android:id="@+id/mTvsetsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="设置字体大小"
        />
    <TextView
        android:id="@+id/mTvactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="ActivityTopBar"
        />
    <Button
        android:id="@+id/mBtnlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"/>
    <Button
        android:id="@+id/mBtncancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消"/>
</LinearLayout>
