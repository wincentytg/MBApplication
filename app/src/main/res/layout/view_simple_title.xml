<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    

    <LinearLayout
        android:id="@+id/view_simple_title_lin_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minWidth="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/view_simple_title_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" 
             />

        <TextView
            android:id="@+id/view_simple_title_txt_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="left"
            android:textSize="@dimen/view_simple_title_text_size"
            android:textColor="@color/color_333333"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_simple_title_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:text="title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/view_simple_title_center_text_size"
             />

        <TextView
            android:id="@+id/view_simple_title_txt_title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="title"
            android:textColor="@color/color_333333"
            android:textSize="17sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_simple_title_lin_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minWidth="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/view_simple_title_txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="right"
            android:textSize="@dimen/view_simple_title_text_size"
            android:textColor="@color/color_333333"
            />

        <ImageView
            android:id="@+id/view_simple_title_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" 
             />
    </LinearLayout>

</RelativeLayout>